<project name="Biathlon simulation" default="run">

	<!-- External JARs included into classpath -->
	<path id="external-libs">
		<fileset dir="lib">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="clean">
		<delete dir="bin" />
	</target>

	<target name="compile">
		<mkdir dir="bin" />
		<mkdir dir="bin/classes" />

		<javac srcdir="src" destdir="bin/classes">
			<classpath refid="external-libs" />
		</javac>
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="bin/jar" />

		<manifestclasspath property="lib.list" jarfile="bin/jar/Simulation.jar">
			<classpath refid="external-libs" />
		</manifestclasspath>

		<jar destfile="bin/jar/Simulation.jar" basedir="bin/classes">
			<manifest>
				<attribute name="Main-Class" value="sim.Biathlon" />
				<attribute name="Class-Path" value="${lib.list}" />
			</manifest>
		</jar>
	</target>

	<target name="run" depends="jar">
		<delete dir="log" />
		<mkdir dir="log" />
		<java jar="bin/jar/Simulation.jar" fork="true">
			<classpath refid="external-libs" />
		</java>

		<!-- Remove diagnostic files generated by DISMO-J -->
		<delete>
			<fileset dir="." includes="*.html" />
		</delete>
	</target>

</project>
